{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": false,
    "checkJs": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "incremental": false,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "build-system/**/*",
  ],
  "exclude": [
    "./**/node_modules/**",
  ]
}
